<div class="cell small-12" style="position: relative;width:100%;margin:0;">
    <form id="roomform" action="/user/chat" method="post">
        <div class="input-group">
            <span class="input-group-label hide-for-small-only" style="margin-top:3px;">
                <i class="fa-solid fa-users hide-for-small"></i>
            </span>

            <input id="room-namer-input" type="text" class="input-group-field" name="roomName"
                placeholder="Enter a name for the room" />

            <div class="input-group-button">
                <input id="room-namer-button" type="submit" class="submit button" value="Submit">
            </div>
        </div>
    </form>
</div>