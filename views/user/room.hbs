{{#if hasToken}}
<input type="hidden" id="join-room-input" value="{{token}}">
<input type="hidden" id="room-name-input" value="{{roomName}}">

<div class="grid-container fluid" style="margin:50px;">
    <div class="grid-x grid-margin-x">
        <div class="cell small-12">
            <div class="grid-x" style="place-content:center;">
                <div class="cell medium-6 small-12" id="local-part"></div>
                <div class="cell medium-6 small-12" id="remote-parts"></div>
            </div>
        </div>

        <div class="cell small-12" id="controls"></div>
    </div>
</div>
{{else}}
<div class="grid-container fluid" style="margin:50px;">
    <div class="grid-x grid-margin-x grid-margin-y">
        <div class="cell small-12">
            <form action="/user/chat" method="post" class="grid-x">
                <div class="input-group">
                    <span class="input-group-label">
                        <i class="fa-solid fa-users"></i>
                    </span>

                    <input type="text" class="input-group-field" name="roomName"
                        placeholder="Enter a name for the room" />

                    <div class="input-group-button">
                        <input type="submit" class="submit button" value="Submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}

<input type="hidden" id="rmtid-input" value="{{rmtId}}">
<input type="hidden" id="personal-code">